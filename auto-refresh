export default {
  async fetch(request) {
    const url = new URL(request.url);
    const path = url.pathname;

    if (path === "/api/latest-m3u8") {
      const res = await fetch(API_URL, {
        headers: {
          "Referer": REFERER,
          "Accept": "application/json"
        }
      });

      const json = await res.json();

      // ğŸ‘‡ Modify this depending on the exact field name
      const stream = json.data.find(e => e.streamUrl || e.playbackUrl || e.hls);

      if (!stream) {
        return new Response("âŒ No stream found", { status: 404 });
      }

      const m3u8 = stream.streamUrl || stream.playbackUrl || stream.hls;

      return new Response(m3u8, {
        headers: {
          "Content-Type": "text/plain"
        }
      });
