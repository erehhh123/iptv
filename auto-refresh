const express = require('express');
const puppeteer = require('puppeteer');

const app = express();
const PORT = 3000;

// Update this to the real page that loads the player
const TARGET_PAGE = "https://app.blasttv.ph/channel/yourchannel";

app.get('/api/latest-m3u8', async (req, res) => {
  try {
    const browser = await puppeteer.launch({ headless: "new" });
    const page = await browser.newPage();

    let foundUrl = null;

    page.on('response', async (response) => {
      const url = response.url();
      if (url.includes("playlist.m3u8") && url.includes("hdnea=")) {
        foundUrl = url;
        await browser.close();
        res.send(foundUrl);
      }
    });

    await page.goto(TARGET_PAGE, { waitUntil: 'networkidle2', timeout: 30000 });

    setTimeout(async () => {
      if (!foundUrl) {
        await browser.close();
        res.status(404).send("âŒ M3U8 not found in time");
      }
    }, 10000); // 10 seconds timeout

  } catch (err) {
    console.error(err);
    res.status(500).send("âŒ Error occurred");
  }
});

app.listen(PORT, () => {
  console.log(`ğŸš€ M3U8 scraper running at http://localhost:${PORT}/api/latest-m3u8`);
});
